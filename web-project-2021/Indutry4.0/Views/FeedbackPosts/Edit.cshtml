@model Indutry4._0.Models.FeedbackPost

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Feedback</h1>

<h4>@*FeedbackPost*@</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" readonly />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" readonly value="@User.Identity.Name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Heading" class="control-label"></label>
                <input asp-for="Heading" class="form-control" placeholder="Enter a topic for your feedback" />
                <span asp-validation-for="Heading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StarRating" class="control-label"></label>
                <input asp-for="StarRating" class="form-control" />
                <span asp-validation-for="StarRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback" class="control-label"></label>
                <textarea asp-for="Feedback" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Feedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agree" class="control-label"></label>
                <input asp-for="Agree" class="form-control"  />
                <span asp-validation-for="Agree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disagree" class="control-label"></label>
                <input asp-for="Disagree" class="form-control"  />
                <span asp-validation-for="Disagree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyOrganizationName" class="control-label">EmergingTechnologyName</label>
                @*<input asp-for="CompanyOrganizationName" class="form-control" />*@
                <select asp-for="CompanyOrganizationName" class="form-control">
                    <option value="" selected disabled>Select a Company or Organization</option>
                    <option>Amazon</option>
                    <option>CSIRO</option>
                    <option>Google</option>
                    <option>IBM</option>
                    <option>Microsoft</option>
                    <option>Department of Industry, Science, Energy and Resources</option>

                </select>
                <span asp-validation-for="CompanyOrganizationName" class="text-danger"></span>
            </div>
            @*<div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="canIncreaseAgree" /> @Html.DisplayNameFor(model => model.canIncreaseAgree)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="canIncreaseDisagree" /> @Html.DisplayNameFor(model => model.canIncreaseDisagree)
            </label>
        </div>*@
            <div class="form-group">
                <input href="~/Home/companiesOrganizations" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="companiesOrganizations">  Back to Companies and Organisations Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
